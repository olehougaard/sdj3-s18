  	  <xs:sequence>
  	  	<xs:element name="teacher">
  	  	  <xs:complexType>
 	  	    <xs:attribute name="initials" type="xs:string" use="required"/>
 	  	    <xs:attribute name="name" type="xs:string" use="required"/>
  	  	  </xs:complexType>
  	  	</xs:element>
  	  </xs:sequence>
      <xs:attribute name="name" type="xs:string" use="required"/>
  	  <xs:attribute name="ectsPoints" type="xs:int" use="required"/>
  	</xs:complexType>
  </xs:element>
</xs:schema>
